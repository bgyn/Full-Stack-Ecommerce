<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Category</title>
    <style>
      /* Ensure main content does not overlap */
      .main-content {
        margin-left: 250px;
        padding: 20px;
      }

      /* Custom style for Floating Action Button (FAB) */
      .fab {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        cursor: pointer;
      }

      /* Reduce image size */
      .card-img-top {
        height: 150px;
        object-fit: contain;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container-fluid mt-4">
        <h2>Categories</h2>
        <div class="row" id="category-container">
          <!-- Categories will be dynamically inserted here -->
        </div>
      </div>
    </div>

    <!-- Floating Action Button -->
    <a href="/category/add">
      <button class="fab btn btn-primary">+</button>
    </a>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        fetch("/api/v1/category")
          .then((response) => response.json())
          .then((data) => {
            const container = document.getElementById("category-container");
            container.innerHTML = "";
            data.forEach((category) => {
              const categoryCard = `
                <div class="col-md-4 mb-4">
                  <div class="card">
                    <img src="${
                      category.categoryImage
                    }" class="card-img-top" alt="${category.categoryName}">
                    <div class="card-body">
                      <h5 class="card-title">${category.categoryName}</h5>
                      <p class="card-text"><small class="text-muted">Created at: ${new Date(
                        category.createdAt
                      ).toLocaleDateString()}</small></p>
                    </div>
                  </div>
                </div>
              `;
              container.innerHTML += categoryCard;
            });
          })
          .catch((error) => console.error("Error fetching categories:", error));
      });
    </script>

    <%- include("./partials/script") %>
  </body>
</html>
