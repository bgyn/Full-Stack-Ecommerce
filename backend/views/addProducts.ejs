<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Add Product</title>
    <!-- Bootstrap CSS -->
    <style>
      .main-content {
        margin-left: 250px;
        padding: 20px;
      }
      .variant-section {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
      }
      .add-variant-btn {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="main-content">
      <div class="container mt-4">
        <h1 class="mb-4">Add Product</h1>

        <!-- Product Details Section -->
        <form
          action="/api/v1/product/add"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="card mb-4">
            <div class="card-header">Product Details</div>
            <div class="card-body">
              <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="productName"
                  name="name"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="productDescription" class="form-label"
                  >Description</label
                >
                <textarea
                  class="form-control"
                  id="productDescription"
                  name="description"
                  rows="3"
                  required
                ></textarea>
              </div>

              <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select
                  multiple
                  class="form-control"
                  id="category"
                  name="category"
                  required
                >
                  <option value="">Select Category</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Variant Section -->
          <div class="card mb-4">
            <div class="card-header">Variants</div>
            <div class="card-body" id="variantContainer">
              <!-- Initial Variant -->
              <div class="variant-section">
                <div class="row mb-3">
                  <div class="col-md-3">
                    <label for="price" class="form-label">Price</label>
                    <input
                      type="number"
                      class="form-control"
                      name="variants[0][price]"
                      required
                    />
                  </div>
                  <div class="col-md-3">
                    <label for="color" class="form-label">Color</label>
                    <input
                      type="text"
                      class="form-control"
                      name="variants[0][color]"
                      required
                    />
                  </div>
                  <div class="col-md-3">
                    <label for="size" class="form-label">Size</label>
                    <input
                      type="text"
                      class="form-control"
                      name="variants[0][size]"
                      required
                    />
                  </div>
                  <div class="col-md-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input
                      type="number"
                      class="form-control"
                      name="variants[0][stock]"
                      required
                    />
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label for="sku" class="form-label">SKU</label>
                    <input
                      type="text"
                      class="form-control"
                      name="variants[0][sku]"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="images" class="form-label"
                      >Images (Max 5)</label
                    >
                    <input
                      type="file"
                      class="form-control"
                      name="variants[0][images]"
                      multiple
                      accept="image/*"
                      max="5"
                      required
                    />
                  </div>
                </div>
                <button
                  type="button"
                  class="btn btn-danger btn-sm remove-variant-btn"
                >
                  Remove Variant
                </button>
              </div>
            </div>
            <div class="card-footer">
              <button
                type="button"
                class="btn btn-primary add-variant-btn"
                id="addVariant"
              >
                Add Variant
              </button>
            </div>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-success">Submit</button>
        </form>
      </div>
    </div>

    <%- include("./partials/script.ejs") %>

    <!-- JavaScript for Dynamic Variant Addition -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        fetch("/api/v1/category")
          .then((response) => response.json())
          .then((data) => {
            const categorySelect = document.getElementById("category");
            data.forEach((category) => {
              const option = document.createElement("option");
              option.value = category.id;
              option.text = category.categoryName;
              categorySelect.appendChild(option);
            });
          })
          .catch((error) => console.error("Error fetching categories:", error));
      });

      document.addEventListener("DOMContentLoaded", function () {
        const variantContainer = document.getElementById("variantContainer");
        const addVariantBtn = document.getElementById("addVariant");

        let variantCount = 1; // Start counting from 1 since the first variant is already present

        // Function to create a new variant section
        function createVariantSection(index) {
          const newVariant = document.createElement("div");
          newVariant.classList.add("variant-section");

          newVariant.innerHTML = `
                  <div class="row mb-3">
                    <div class="col-md-3">
                      <label for="price" class="form-label">Price</label>
                      <input
                        type="number"
                        class="form-control"
                        name="variants[${index}][price]"
                        required
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="color" class="form-label">Color</label>
                      <input
                        type="text"
                        class="form-control"
                        name="variants[${index}][color]"
                        required
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="size" class="form-label">Size</label>
                      <input
                        type="text"
                        class="form-control"
                        name="variants[${index}][size]"
                        required
                      />
                    </div>
                    <div class="col-md-3">
                      <label for="stock" class="form-label">Stock</label>
                      <input
                        type="number"
                        class="form-control"
                        name="variants[${index}][stock]"
                        required
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="sku" class="form-label">SKU</label>
                      <input
                        type="text"
                        class="form-control"
                        name="variants[${index}][sku]"
                        required
                      />
                    </div>
                    <div class="col-md-6">
                      <label for="images" class="form-label">Images (Max 5)</label>
                      <input
                        type="file"
                        class="form-control"
                        name="variants[${index}][images]"
                        multiple
                        accept="image/*"
                        max="5"
                        required
                      />
                    </div>
                  </div>
                  <button
                    type="button"
                    class="btn btn-danger btn-sm remove-variant-btn"
                  >
                    Remove Variant
                  </button>
                `;

          // Add event listener to the remove button
          const removeBtn = newVariant.querySelector(".remove-variant-btn");
          removeBtn.addEventListener("click", function () {
            newVariant.remove();
          });

          return newVariant;
        }

        // Add Variant Button Click Event
        addVariantBtn.addEventListener("click", function () {
          const newVariant = createVariantSection(variantCount);
          variantContainer.appendChild(newVariant);
          variantCount++;
        });

        // Remove Variant Functionality for Initial Variant
        const removeButtons = document.querySelectorAll(".remove-variant-btn");
        removeButtons.forEach((button) => {
          button.addEventListener("click", function () {
            button.closest(".variant-section").remove();
          });
        });
      });
    </script>
  </body>
</html>
