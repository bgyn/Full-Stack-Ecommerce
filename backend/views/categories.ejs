<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Category</title>
    <style>
      /* Ensure main content does not overlap */
      .main-content {
        margin-left: 250px; /* Push content to the right */
        padding: 20px;
      }

      /* Custom style for Floating Action Button (FAB) */
      .fab {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container-fluid mt-4"></div>
    </div>

    <!-- Floating Action Button -->
    <a href="/category/add">
      <button
        class="fab btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addProductModal"
      >
        +
      </button>
    </a>

    <%- include("./partials/script") %>
  </body>
</html>
